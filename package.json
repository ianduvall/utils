{
	"name": "utils",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"change": "changeset",
		"clean": "turbo run clean",
		"dev": "turbo run dev --parallel",
		"format": "prettier **/*.{ts,tsx,js,md,json} --write --cache",
		"lint": "turbo run lint",
		"publish-packages": "turbo run build lint test && changeset version && changeset publish",
		"release": "changeset publish",
		"test": "turbo run test --parallel",
		"version": "changeset version",
		"w:react-app": "pnpm --filter=...react-app",
		"w:react-resize-observer-store": "pnpm --filter @ianduvall/react-resize-observer-store",
		"w:resize-observer-store": "pnpm --filter @ianduvall/resize-observer-store"
	},
	"engines": {
		"node": ">=16"
	},
	"devDependencies": {
		"@changesets/cli": "2.26.0",
		"eslint-config-custom": "workspace:*",
		"prettier": "latest",
		"turbo": "latest"
	},
	"packageManager": "pnpm@7.25.0",
	"prettier": {
		"useTabs": true,
		"semi": true,
		"trailingComma": "all"
	}
}
