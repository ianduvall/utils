{
	"$schema": "https://json.schemastore.org/tsconfig",

	"extends": "tsconfig/base.json",
	"include": ["."],
	"exclude": ["dist", "build", "node_modules"],
	"compilerOptions": {
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"lib": ["ES2022", "DOM"],
		"module": "commonjs",
		"outDir": "dist",
		"rootDir": "src",
		"sourceMap": true,
		"target": "ES2022",
		"tsBuildInfoFile": "dist/.tsbuildinfo"
	}
}
