{
	"$schema": "https://json.schemastore.org/tsconfig",

	"extends": "tsconfig/base.json",
	"include": ["."],
	"exclude": ["dist", "build", "node_modules"],
	"compilerOptions": {
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"lib": ["ES2020", "DOM"],
		"outDir": "dist",
		"rootDir": "src",
		"sourceMap": true,
		"target": "ES2020",
		"tsBuildInfoFile": "dist/.tsbuildinfo"
	}
}
