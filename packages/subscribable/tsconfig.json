{
  "extends": "tsconfig/base.json",
  "include": ["."],
  "exclude": ["dist", "build", "node_modules"],
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "./src/",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "lib": ["ESNext"],
    "target": "ESNext",
  }
}
