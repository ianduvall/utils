{
	"$schema": "https://json.schemastore.org/tsconfig",

	"display": "Default",
	"compilerOptions": {
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"moduleResolution": "node",
		"preserveWatchOutput": true,
		"skipLibCheck": true,
		"strict": true
	},
	"exclude": ["node_modules"]
}
