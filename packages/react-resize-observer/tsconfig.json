{
	"extends": "tsconfig/react-library.json",
	"include": ["."],
	"exclude": ["dist", "build", "node_modules"],
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": "./src/",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"composite": true,
		"tsBuildInfoFile": "dist/.tsbuildinfo",
		"lib": ["ES2022", "DOM"],
		"target": "ES2022"
	}
}
